<p id="notice"><%= notice %></p>

<h1>Schools</h1>

<%= form_tag schools_path, method: 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag 'Buscar' %>
<% end %>
<%=link_to "buscar colegios", new_search_path%>


<table>
  <thead>
    <tr>
      <th>State</th>
      <th>City</th>
      <th>School name</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Levels</th>
      <th>School hours</th>
      <th>Languages</th>
      <th>Owner</th>
      <th>Cycle</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.state %></td>
        <td><%= school.city %></td>
        <td><%= school.school_name %></td>
        <td><%= school.address %></td>
        <td><%= school.gender %></td>
        <td><%= school.levels %></td>
        <td><%= school.school_hours %></td>
        <td><%= school.languages %></td>
        <td><%= school.owner %></td>
        <td><%= school.cycle %></td>
        <td><%= school.latitude %></td>
        <td><%= school.longitude %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>
