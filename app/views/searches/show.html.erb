<% @search.schools.each_slice(3) do |results| %>
  <div class="row">
    <% results.each do |school| %>
     <div class="col-md-4">
      <div class="card-body">
        <h4 class="card-title"><%= school.school_name %></h4>
        <p class="card-text"><%= school.address %></p>
        <script>
        	addMarker(<%=school.coords%>)
        </script>
      </div>
     </div>
    <% end %>
  </div>
 <% end %>		

